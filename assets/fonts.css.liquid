@font-face {
  font-family: "Brandon Grotesque";
  src: url("{{ 'brandongrotesque-regular.ttf' | assets_url }}") format("truetype"), url("{{ 'brandongrotesque-regular.woff' | assets_url }}") format("woff");
}

@font-face {
  font-family: "Brandon Grotesque";
  src: url("{{ 'brandongrotesque-medium.ttf' | assets_url }}") format("truetype"), url("{{ 'brandongrotesque-medium.woff' | assets_url }}") format("woff");
  font-weight: 500;
}

@font-face {
  font-family: "Brandon Grotesque";
  src: url("{{ 'brandongrotesque-bold.ttf' | assets_url }}") format("truetype"), url("{{ 'brandongrotesque-bold.woff' | assets_url }}") format("woff");
  font-weight: 700;
}


body {
  font-family: "Brandon Grotesque";
  --font-text: "Brandon Grotesque";
}